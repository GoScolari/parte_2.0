<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MostrarInformacionActivity">

    <TextView
        android:id="@+id/informacionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Información"
        android:textSize="20sp"
        android:layout_gravity="center" />

    <!-- Puedes agregar más elementos para mostrar información adicional aquí, si es necesario. -->

    <Button
        android:id="@+id/generarPDFButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Generar PDF" />
</LinearLayout>


