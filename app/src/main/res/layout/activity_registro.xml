<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:paddingBottom="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#283593"
            android:contentInsetStartWithNavigation="0dp"
            android:theme="?attr/actionBarTheme"
            app:popupTheme="?attr/actionBarPopupTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/volverButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:onClick="volver"
                    android:text="Volver"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VC-1"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/inicioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicio"
                    android:textColor="#FFFFFF"
                    android:background="?android:selectableItemBackground"
                    android:onClick="inicio" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="300dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:columnCount="2"
            android:orientation="vertical"
            android:padding="5dp"
            android:rowCount="20">

            <!-- Tarjeta 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#283592"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#6E6E6E"
                        android:backgroundTint="#283593"
                        android:gravity="left"
                        android:paddingLeft="50dp"
                        android:text="CF F. Rivera G."
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorAccent"
                        android:trackTint="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#283592"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#283593"
                        android:gravity="left"
                        android:paddingLeft="50dp"
                        android:text="CC R. Saavedra O."
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Switch
                        android:id="@+id/switch2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorAccent"
                        android:trackTint="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#283592"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#283593"
                        android:gravity="left"
                        android:paddingLeft="50dp"
                        android:text="T2 I. Rivera L."
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Switch
                        android:id="@+id/switch3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorAccent"
                        android:trackTint="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_rowWeight="0.5"
                android:layout_columnWeight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#283592"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#283593"
                        android:gravity="left"
                        android:paddingLeft="50dp"
                        android:text="C2 C. HenrÃ­quez F."
                        android:textColor="@color/white"
                        android:textSize="24sp" />

                    <Switch
                        android:id="@+id/switch4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/colorAccent"
                        android:trackTint="@color/colorPrimary" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>
    </LinearLayout>
</ScrollView>
