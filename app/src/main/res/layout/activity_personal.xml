<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="50dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#283593"
        android:contentInsetStartWithNavigation="0dp"
        android:theme="?attr/actionBarTheme"
        app:popupTheme="?attr/actionBarPopupTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/volverButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:onClick="volver"
                android:text="Volver"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VC-1"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/inicioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:selectableItemBackground"
                android:onClick="inicio"
                android:text="Inicio"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Contenedor centrado con imagen y texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:background="#283593"
        android:orientation="vertical">

        <!-- Imagen centrada -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/image1" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="20dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="7">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Grado"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="C2° (Mc. Av.)"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Nombre"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="C. Henríquez F."
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="NPI"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="534819-2"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Rut"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="19.976.389-k"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Cargo"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="Logístico"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Correo"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="232dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="chenriquezf@armada.cl"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Llico"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="229dp"
                android:layout_height="match_parent"
                android:background="#283593"
                android:gravity="left"
                android:text="2453"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </GridLayout>

    </LinearLayout>


    <Button
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#283593"
        android:onClick="modificar"
        android:text="ModificaR"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="#9E0A0A"
        android:textColorLink="#DA0909"
        app:strokeColor="#F40C0C" />

</LinearLayout>